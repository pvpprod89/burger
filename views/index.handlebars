<div class="header-container">
  <img id="burger-image" src="assets/img/burger.jpeg" alt="Burger_image">
  <h1>Eat-Da-Burger!</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-left color-white text-center capital-text">
      Enter burger name you would like to eat!
      <br>
      <br>
      <form action="/burgers/create" method="POST">
        <input type="text" name="burger_name" class="form-control" value="" id="enter_text" required>
        <br>
        <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT
        </button>
        <br>
        <br>
      </form>
    </div>

    <div class="col-sm color-white text-center capital-text">
      Burgers Ready to Eat!

      <div class="row">
        {{#each burger_data}}
        {{#unless this.devoured}}

        <div class="col text-left">
          <pre class="color-white pre-content">{{this.id}}. {{this.burger_name}}</pre>

        </div>

        <div class="col text-center">
          <form method="POST" action="/burgers/update?_method=PUT">
            <input type="hidden" name="burger_id" type="text" value={{this.id}}>
            <br>
            <button type="submit" class="btn btn-default">
              DEVOUR IT!
            </button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>
    </div>

    <div class="col-sm color-white text-center">
      DEVOURED BURGERS!

      {{#each burger_data}}
      {{#if this.devoured}}
      <input class="form-control form-control-right" type="text" placeholder="{{this.id}}. {{this.burger_name}}"
        readonly>
      {{/if}}
      {{/each}}
    </div>

  </div>
</div>